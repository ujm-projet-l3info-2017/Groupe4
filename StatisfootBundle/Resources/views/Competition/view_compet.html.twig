{% extends "ProjetStatisfootBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Accueil{% endblock %}

{% block body %}
<div class="gauche">
	<ul>
	{%for match in listeMatch%}
	<li class="news">
		<ul>
			<li>{{match['idMatch']}}</li>
			<li>{{match['heure']|date('d/m/Y')}}</li>
			<li>{{match['NomEq1']}}</li>
			<li>{{match['Eq1But']}} : {{match['Eq2But']}} </li>
			<li>{{match['NomEq2']}}</li>
		</ul>	
	</li>
	{%endfor%}
</ul>
</div>

<div class="droite">
<div class="titre">Pour le foot </div>
<h1>Notre div droite</h1>
</div>
{% endblock %}