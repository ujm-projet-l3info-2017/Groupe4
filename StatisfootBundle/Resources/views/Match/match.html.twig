{% extends "ProjetStatisfootBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - {{match.id}}{% endblock %}

{% block body %}
 
	
	<h2>{{infodate}}</h2>
	
	<div class =news>
	{{match.id}}
	{{match.lieu}}
	{{match.dateMatch|date('d/m/Y')}}
	{{match.competition.nomCompet}}
	</div>
	{% set Eq1nom = adversaires[0].NomEq1 %}</br>
	{% set flag1 = 0 %}
	{%set flag2 = 0 %}
	{%for ad in adversaires %}

	{% if Eq1nom == ad.NomEq1 %}
	{% if flag1 == 0 %}
	
	<h4>Les derniers Matchs de {{ad.NomEq1}}</h4>
	
	{% set flag1 = 1 %}
	{%endif%}
	<div class =news>
	{{ad.IdMatch}}
	{{ad.NomEq1 }} 
	{{ad.Eq1But }}
	{{ad.Eq2But }}
	{{ad.NomEq2}} 
	</div>
	</br>

	{% else %}
	{% if flag2 == 0 %}
	
	<h4>Les derniers Matchs de {{ad.NomEq1}}</h4>
	
	{% set flag2 = 1 %}
	{%endif%}
	<div class =news>
	{{ad.IdMatch}}
	{{ad.NomEq1 }} 
	{{ad.Eq1But 	}}
	{{ad.Eq2But }}
	{{ad.NomEq2}} </br>
	</div>
	{%endif%}
	{%endfor%}

{%endblock%}