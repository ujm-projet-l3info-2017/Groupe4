<!DOCTYPE HTML>
<html>
  <head>
    <meta charset="utf-8">
	  {% stylesheets 'bundles/ProjetStatisfoot/css/style.css' %}
      <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}    
    <title>{% block title %}STATISFOOT{% endblock %}</title>
  </head>
  <body>
 
  <!-- HEADER-BAR -->
  <div class="header_bar">
  	<div class="left_header_part">
	    <div class="topbar-menu">
        {% if app.user.id is defined %}
	        <a href="{{ path('statisfoot_accueil_manage') }}">STATISFOOT</a>
        {% else %}
          <a href="{{ path('statisfoot_accueil') }}">STATISFOOT</a>
        {% endif %}
	    </div>
	    <div class="menu_list_container unselectable">
        {% if app.user.id is defined %}

          <div class="menu_list">
            <div class="el_container first_el">
              <div class="el">
                <a href="{{ path('statisfoot_manage_equipe',{'id' : app.user.id }) }}"> Mon Equipe </a>
              </div>
            </div>
          </div>

          <div class="menu_list">
            <div class="el_container first_el">
              <div class="el">
                <a href="{{ path('logout')}}"> Déconnexion </a>
              </div>
            </div>
          </div>

        {% else %}  

		      {{ render(controller("ProjetStatisfootBundle:Match:menu")) }}
        
        {% endif %}
	    </div>
	</div>
    <div class="recherche_container">
      <input id="recherche_input" type="text" value "recherche" placeholder="Recherche...">
    </div>
  </div>

  <div class="structure">
    {% block body %}
    
    {% endblock %}
  </div>

    <div class="contact">
    	<div class="aligncenter">
    		si vous avez des questions, des remarques, des suggestions pour améliorer le site, n'hésitez pas à <a href=""> me contacter</a>
    	</div>
  </div>

  </body>

  <script>
  
  </script>
</html>